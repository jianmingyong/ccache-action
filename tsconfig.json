{
  "$schema": "https://json.schemastore.org/tsconfig",

  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/node24/tsconfig.json"
  ],

  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./",
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "newLine": "lf"
  },

  "exclude": ["./dist", "./node_modules", "./__tests__", "./coverage"]
}
